<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AkySystem.Pages.LoginPage"
             Title="Login">
    <VerticalStackLayout Spacing="15" Padding="30" VerticalOptions="Center">
        <Entry x:Name="UsernameEntry" Placeholder="Логин" />
        <Entry x:Name="PasswordEntry" Placeholder="Пароль" IsPassword="True" />
        <Button Text="Войти" Clicked="OnLoginClicked" />
    </VerticalStackLayout>
</ContentPage>