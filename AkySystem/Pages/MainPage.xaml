<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AkySystem.Pages.MainPage"
             Title="Главная">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- Карточка баланса -->
            <Frame BackgroundColor="#512BD4" CornerRadius="15" HasShadow="True">
                <VerticalStackLayout HorizontalOptions="Center" Spacing="10">
                    <Label Text="Ваш баланс" 
                           TextColor="White" 
                           FontSize="18" 
                           HorizontalOptions="Center"/>
                    <Label x:Name="BalanceLabel"
                           Text="{Binding Balance, StringFormat='{0} Aky Coin'}" 
                           TextColor="White" 
                           FontSize="32" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Сетка с функциями -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="15" RowSpacing="15">

                <!-- Кнопка Перевод -->
                <Button Grid.Row="0" Grid.Column="0"
                        Text="Перевод"
                        ImageSource="transfer_icon.png"
                        ContentLayout="Top,10"
                        HeightRequest="120"
                        Command="{Binding TransferCommand}"/>

                <!-- Кнопка Магазин -->
                <Button Grid.Row="0" Grid.Column="1"
                        Text="Магазин"
                        ImageSource="shop_icon.png"
                        ContentLayout="Top,10"
                        HeightRequest="120"
                        Command="{Binding ShopCommand}"/>

                <!-- Можно добавить еще кнопки ниже -->
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>