<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AkySystem.Pages.RegistrationPage"
             Title="Регистрация">

    <VerticalStackLayout Spacing="15" Padding="30" VerticalOptions="Center">
        <Label Text="Добро пожаловать в AkySystem!" FontSize="24" HorizontalOptions="Center" />
        <Label Text="Придумайте логин и пароль" HorizontalOptions="Center" />
        <!-- Поле для ввода логина -->
        <Entry x:Name="LoginEntry" 
       Placeholder="Введите логин" />

        <!-- Поле для ввода пароля -->
        <Entry x:Name="PasswordEntry" 
       Placeholder="Введите пароль" 
       IsPassword="True" />


        <Button Text="Создать аккаунт" Clicked="OnRegisterClicked" BackgroundColor="#2b3cbb" TextColor="White" />
        <Button Text="Уже есть аккаунт? Войти"
        BackgroundColor="Transparent"
        TextColor="Gray"
        Clicked="OnLoginClicked" />
    </VerticalStackLayout>
</ContentPage>