<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="AkySystem.AppShell"
    xmlns:local="clr-namespace:AkySystem.Pages"
    xmlns:pages="clr-namespace:AkySystem.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="AkySystem">

    <!-- Скрываем страницу регистрации из бокового меню (если оно есть) -->
    <ShellContent
    Title="Registration"
    ContentTemplate="{DataTemplate pages:RegistrationPage}"
    Route="RegistrationPage"
    FlyoutItemIsVisible="False"
    Shell.TabBarIsVisible="False"
    Shell.NavBarIsVisible="False" />

    <ShellContent
    Title="Login"
    ContentTemplate="{DataTemplate pages:LoginPage}"
    Route="LoginPage"
    FlyoutItemIsVisible="False"
    Shell.TabBarIsVisible="False"
    Shell.NavBarIsVisible="False" />

    <!-- Основная страница приложения -->
    <ShellContent
    Title="Home"
    ContentTemplate="{DataTemplate pages:MainPage}"
    Route="MainPage" />


</Shell>